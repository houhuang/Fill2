<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333333">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/screenhot_layout"
        android:padding="20dp"
        android:layout_centerInParent="true"
        android:background="@drawable/fragmen_win_bg">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/star"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:id="@+id/achi_star"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/achi"
            android:textSize="35sp"
            android:textColor="@color/map_item_content_pass"
            android:text="ACHIEVEMENT"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_below="@+id/achi_star"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/level"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:background="@drawable/map_star_bg"
            android:layout_below="@id/achi"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:src="@drawable/star"
                android:layout_margin="3dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/achi_star_text"
                android:textSize="15sp"
                android:textColor="#FFF"
                android:layout_marginEnd="3dp"
                android:text="6789/12"
                android:layout_gravity="center"
                android:gravity="center"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iq_bg"
            android:orientation="vertical"
            android:background="@drawable/iq_bg"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/level"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="Your IQ:"
                android:textColor="#fff"
                android:layout_gravity="center"
                android:gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iq_text"
                android:textSize="40sp"
                android:text="200"
                android:textColor="@color/map_item_content_pass"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:id="@+id/btn_bg"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_below="@+id/iq_bg">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/btn_home"
                    android:layout_margin="3dp"
                    android:background="@drawable/orange_button"
                    style="?attr/buttonBarButtonStyle"
                    android:layout_gravity="center" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:src="@drawable/home"
                    android:layout_margin="10dp"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/btn_share"
                    android:layout_margin="3dp"
                    android:background="@drawable/purple_button"
                    style="?attr/buttonBarButtonStyle"
                    android:layout_gravity="center"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:src="@drawable/share2"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"/>

            </FrameLayout>



        </LinearLayout>



    </RelativeLayout>

</RelativeLayout>
